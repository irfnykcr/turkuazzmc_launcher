{
	"name": "turkuazz_launcher",
	"version": "0.0.6",
	"description": "",
	"license": "MIT",
	"author": "",
	"type": "commonjs",
	"main": "main.js",
	"scripts": {
		"start": "electron .",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"devDependencies": {
		"electron": "^40.0.0",
		"electron-builder": "^26.4.0"
	},
	"dependencies": {
		"@xmcl/core": "^2.15.1",
		"electron-store": "^6.0.1",
		"electron-updater": "^6.7.3",
		"msmc": "^5.0.5"
	},
	"build": {
		"appId": "com.turkuazz.launcher",
		"productName": "TURKUAZZMC",
		"artifactName": "${productName}-${version}.${ext}",
		"asar": true,
		"compression": "maximum",
		"publish": {
			"provider": "generic",
			"url": "https://updates.turkuazz.vip/turkuazzmc/"
		},
		"linux": {
			"target": [
				"AppImage"
			],
			"icon": "assets/TURKUAZZMC.png",
			"category": "Utility",
			"files": [
				"main.js",
				"preload.js",
				"utils.js",
				"updaterMain.js",
				"ipcHandlers.js",
				"package.json",
				"views/**/*",
				"src/**/*",
				"assets/**/*",
				"node_modules/**/*"
			]
		},
		"win": {
			"target": [
				"nsis"
			],
			"icon": "assets/TURKUAZZMC.ico",
			"files": [
				"main.js",
				"preload.js",
				"utils.js",
				"updaterMain.js",
				"ipcHandlers.js",
				"package.json",
				"views/**/*",
				"src/**/*",
				"assets/**/*",
				"node_modules/**/*"
			]
		},
		"nsis": {
			"createStartMenuShortcut": false,
			"oneClick": false,
			"runAfterFinish": false,
			"createDesktopShortcut": true,
			"allowToChangeInstallationDirectory": true
		}
	}
}
